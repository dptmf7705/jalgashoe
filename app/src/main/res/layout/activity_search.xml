<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.view.View"/>
        <variable
            name="activity"
            type="com.dankook.jalgashoe.searchPoi.SearchActivity"/>
        <variable
            name="viewModel"
            type="com.dankook.jalgashoe.searchPoi.SearchViewModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/primaryWhite"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:background="@drawable/border_box"
            android:padding="10dp">

            <ImageButton
                style="@style/drawableImageButtonStyle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:onClick="@{(v) -> viewModel.onClickBackButton()}"
                android:layout_marginRight="10dp"
                android:src="@mipmap/icon_back"/>

            <EditText
                android:id="@+id/search_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:textSize="13sp"
                android:inputType="text"
                android:imeOptions="actionSearch"
                android:hint="@string/map_keyword_search_box_hint"
                android:text="@{viewModel.searchText}"
                android:afterTextChanged="@{(s) -> viewModel.onSearchTextChanged(s)}"/>

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/border_box_vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageButton
                    style="@style/drawableImageButtonStyle"
                    android:src="@drawable/ic_my_location"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="현위치"
                    android:textColor="@color/mainBlue"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="로 설정"
                    android:textColor="@android:color/black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageButton
                    style="@style/drawableImageButtonStyle"
                    android:src="@drawable/ic_location_map"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="지도"
                    android:textColor="@color/mainBlue"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="에서 설정"
                    android:textColor="@android:color/black"/>

            </LinearLayout>

        </LinearLayout>

        <ListView
            android:id="@+id/history_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="@{activity.showHistory ? View.VISIBLE : View.GONE}"
            android:layout_weight="1"/>

        <FrameLayout
            android:id="@+id/frame_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="@{activity.showHistory ? View.GONE : View.VISIBLE}"
            android:layout_weight="1"/>

    </LinearLayout>
</layout>