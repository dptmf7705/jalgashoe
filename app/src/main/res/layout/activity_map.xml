<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.dankook.jalgashoe.map.MapViewModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/mapview_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"/>

            <LinearLayout
                android:id="@+id/search_box"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:background="@drawable/border_box_white"
                android:onClick="@{(v) -> viewModel.onClickSearchBar()}"
                android:padding="10dp">

                <ImageButton
                    style="@style/drawableImageButtonStyle"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:onClick="@{(v) -> viewModel.onClickSearchBar()}"
                    android:src="@mipmap/ic_search"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:textSize="13sp"
                    android:onClick="@{(v) -> viewModel.onClickSearchBar()}"
                    android:hint="@string/map_keyword_search_box_hint"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:visibility="gone"
                android:background="@drawable/border_box_white">

                <!--android:visibility="@{viewModel.showPath ? View.VISIBLE : View.GONE}"-->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="13sp"
                    android:padding="10dp"
                    android:inputType="textMultiLine"
                    android:lineSpacingMultiplier="1.3"
                    android:text="@{viewModel.textPath}"
                    android:textColor="@android:color/black"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="닫기"
                    android:textSize="11sp"
                    android:onClick="@{(v) -> viewModel.onPathCloseClick()}"
                    android:background="@drawable/border_box"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentBottom="true">

                <ImageButton
                    android:layout_marginRight="15dp"
                    android:padding="13dp"
                    style="@style/circleImageButtonStyle"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="right"
                    android:src="@drawable/ic_my_location_active"
                    app:myLocation="@{viewModel.isMyLocation}"
                    android:onClick="@{(v) -> viewModel.onMyLocationClick()}"/>

                <ImageButton
                    style="@style/circleImageButtonStyle"
                    android:padding="13dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="15dp"
                    android:layout_gravity="right"
                    android:src="@drawable/ic_compass_deactive"
                    app:compassMode="@{viewModel.isCompassMode}"
                    android:onClick="@{(v) -> viewModel.onCompassChange()}"/>

                <TextView
                    android:id="@+id/current_location_text"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/transBlack"
                    android:textColor="@android:color/white"
                    android:textSize="13sp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:text="@{viewModel.currentAddress}"/>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/search_path_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_box"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:drawableLeft="@drawable/ic_location_active"
                    android:drawablePadding="5dp"
                    android:hint="출발지 검색"
                    android:text="@{viewModel.departureAddress}"
                    android:textSize="13sp"
                    android:gravity="center_vertical"
                    android:textColor="@android:color/black"
                    android:onClick="@{(v) -> viewModel.onClickSearchBar()}"
                    android:background="@drawable/round_border"/>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:drawableLeft="@drawable/ic_marker_destination"
                    android:drawablePadding="5dp"
                    android:hint="목적지 검색"
                    android:text="@{viewModel.destinationAddress}"
                    android:textSize="13sp"
                    android:gravity="center_vertical"
                    android:textColor="@android:color/black"
                    android:onClick="@{(v) -> viewModel.onClickSearchBar()}"
                    android:background="@drawable/round_border"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:background="@drawable/round_border"
                android:onClick="@{(v) -> viewModel.onFindPathClick()}"
                android:gravity="center">

                <ImageButton
                    style="@style/drawableImageButtonStyle"
                    android:layout_width="42dp"
                    android:layout_height="36dp"
                    android:layout_marginBottom="5dp"
                    android:onClick="@{(v) -> viewModel.onFindPathClick()}"
                    android:src="@drawable/icon_foot" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:gravity="center_horizontal|bottom"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:onClick="@{(v) -> viewModel.onFindPathClick()}"
                    android:text="@string/find_path_start_button_text"/>

            </LinearLayout>
        </LinearLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorPrimary"
            app:tabGravity="center"
            app:tabIndicatorColor="@color/colorAccent"
            app:tabBackground="@color/colorPrimary"
            android:scaleY="-1">

        </android.support.design.widget.TabLayout>

    </LinearLayout>
</layout>
